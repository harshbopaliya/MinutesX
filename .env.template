# MinutesX Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# =============================================================================
# Google AI / Gemini Configuration
# =============================================================================
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Model configuration
GEMINI_MODEL=gemini-2.5-flash-preview-05-20
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_TOKENS=4096

# =============================================================================
# Google Cloud Configuration
# =============================================================================
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service_account.json

# =============================================================================
# Google Meet Integration
# =============================================================================
# OAuth credentials for Meet API access
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback

# =============================================================================
# Redis Configuration (A2A Message Bus)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Memory Backend Configuration
# =============================================================================
MEMORY_BACKEND=chromadb
CHROMADB_PATH=./data/chromadb
EMBEDDING_MODEL=models/embedding-001

# =============================================================================
# Integration Configuration
# =============================================================================
# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#meeting-notes

# Jira
JIRA_URL=https://your-org.atlassian.net
JIRA_EMAIL=your_email@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=MEET

# =============================================================================
# Observability Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true
METRICS_PORT=9090

# OpenTelemetry
OTEL_SERVICE_NAME=minutesx
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Agent Settings
# =============================================================================
PARALLEL_AGENT_TIMEOUT=30
MAX_RETRIES=3
CONTEXT_WINDOW_SIZE=32000
